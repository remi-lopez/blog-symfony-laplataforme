{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<main class="register_container">
    {% if app.user %}
        <div>
            <p>Vous êtes déjà connecté au compte {{ app.user.username }}.</p>
            <p>Vous pouvez accéder à votre dashboard <a href="{{ path('app_dashboard_index')}}">ici</a>.</p>
        </div>
    {% else %}
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, { label: 'Nom d\'utilisateur' }) }}
            {{ form_row(registrationForm.email, { label: 'Adresse email' }) }}
            {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
            {{ form_row(registrationForm.agreeTerms, { label: 'J\'accepte les conditions d\'utilisation' }) }}

            <button type="submit" class="btn">S'inscrire</button>
        {{ form_end(registrationForm) }}
    {% endif %}
</main>
{% endblock %}
